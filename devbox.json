{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "awscli2@latest",
    "azure-cli@latest",
    "tfswitch@latest",
    "kubectl@latest",
    "kubernetes-helm@latest",
    "ansible@latest",
    "packer@latest",
    "gitleaks@latest",
    "git@latest",
    "gh@latest",
    "thefuck@latest",
    "k9s@latest",
    "fzf@latest",
    "zoxide@latest",
    "jq@latest",
    "yq@latest",
    "tmux@latest",
    "bat@latest"
  ],
  "shell": {
    "init_hook": [
        "echo 'Welcome!'"
    ],
    "scripts": {
      "ver": [
        "aws --version && az --version && kubectl version && helm version && ansible --version"
      ]
    }
  }
}
